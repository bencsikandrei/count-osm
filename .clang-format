Language:        Cpp
BasedOnStyle:  Mozilla
SortIncludes: CaseInsensitive
BreakBeforeBraces: Custom
BraceWrapping:
  AfterControlStatement: Always
  AfterEnum: true
  AfterFunction: true
  AfterStruct: true
  AfterUnion: true
  BeforeElse: true
  AfterCaseLabel:  true
  AfterClass:      true
  AfterNamespace:  true
  AfterExternBlock: true